PORT=3000
SESSION_SECRET=replace-with-random-secret

# Google OAuth app credentials from Google Cloud Console.
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Must exactly match your OAuth redirect URI in Google Cloud.
# If running locally via docker host: http://localhost:3000/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Optional: replace with your own calendar embed link.
# Example: https://calendar.google.com/calendar/embed?src=your_calendar_id&ctz=America%2FChicago
GOOGLE_CALENDAR_EMBED_URL=https://calendar.google.com/calendar/embed?showTitle=0&showTabs=0&showCalendars=0

# Calendar to write events to. Use "primary" or a specific calendar ID.
# Example ID often looks like: abcdef123456@group.calendar.google.com
GOOGLE_TARGET_CALENDAR_ID=primary

# Optional: comma-separated email allowlist. If empty, any signed-in account is allowed.
# Example: ALLOWED_GOOGLE_EMAILS=you@gmail.com,friend@gmail.com
ALLOWED_GOOGLE_EMAILS=
